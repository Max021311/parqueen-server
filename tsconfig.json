{
  "ts-node": {
    "swc": true
  },
  "extend": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
